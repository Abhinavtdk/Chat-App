<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img_search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile_img"/>

    <TextView
        android:id="@+id/username_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_text"
        android:layout_toEndOf="@+id/profile_img_search"
        android:layout_centerInParent="true"
        android:layout_marginStart="12dp"
        android:textSize="19sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_online_img"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:civ_border_color="#05df29"
        app:civ_border_width="12dp"
        android:src="@drawable/profile_img"
        android:layout_alignEnd="@+id/profile_img_search"
        android:layout_alignBottom="@+id/profile_img_search"
        android:visibility="gone"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_offline_img"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:civ_border_color="#bfbfbf"
        app:civ_border_width="12dp"
        android:src="@drawable/profile_img"
        android:layout_alignEnd="@+id/profile_img_search"
        android:layout_alignBottom="@+id/profile_img_search"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_search"
        android:layout_toEndOf="@+id/profile_img_search"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"
        android:padding="6dp"
        android:textSize="19sp"
        android:maxLines="1"
        android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>